@model Bio.Models.Viewing

@{
    ViewData["Title"] = "Book";
}

<h2>Book</h2>

<h4>Viewing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Book">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="control-label">Tickets</label>
                <input asp-for="SeatsLeft" class="form-control" value="1"/>
                <span asp-validation-for="SeatsLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MovieID" class="form-control" asp-items="ViewBag.MovieID">
                <span asp-validation-for="MovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AuditoriumID" class="form-control" asp-items="ViewBag.AuditoriumID">
                <span asp-validation-for="AuditoriumID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
